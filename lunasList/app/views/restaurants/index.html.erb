<main role="main" class="container">


    <h1>Restaurants</h1>
	<p>
	<iframe
  width="600"
  height="450"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBoj1FdGM5fcqBdj9MCTVFlEhm3FTcoUzY
    &q=restaurants+in+<%=request.location.city%>+<%=request.location.state%>" allowfullscreen>
</iframe></p>
	</br>

<h4>Search by City</h4>
<p>
	<%= form_tag restaurants_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :city => nil%>
<% end %>
</p></br>
<% if user_signed_in? && current_user.admin == true%>
    <table class="table table-sm">
    <thead>
        <tr>

        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">City</th>
        <th scope="col">State</th>
        <th scope="col">Style</th>

	<th scope="col">Approved</th>
        <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        <% @restaurants.each do |restaurant| %>
        <tr>

        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.type %></td>


	<%if restaurant.approved == true%>
            <td>Approved</td>
            <%else%>
            <td>Not Approved</td>
<%end%>
        
        <td>
 
             <%= link_to 'Show', restaurant_path(restaurant) %>           
            <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
            <%= link_to 'Destroy', restaurant_path(restaurant), method: :delete %> 
            
        </td> 
        
        </tr>
        <% end %>
    </tbody>
    </table>
    <p>
        <%= link_to 'Create New restaurant', new_restaurant_path%>
    </p>
	<%else%>
    <table class="table table-sm">
    <thead>
        <tr>

        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">City</th>
        <th scope="col">State</th>
        <th scope="col">Style</th>
        <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        <% @restaurants.each do |restaurant| %>
        <tr>
	<%if restaurant.approved == true %>

        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.type %></td>
             <td><%= link_to 'Show', restaurant_path(restaurant) %>  </td>

	<%end%>
        
        </tr>
        <% end %>
    </tbody>
    </table>
	
 

    <p>
        <%= link_to 'Create New restaurant', new_restaurant_path%>
    </p>
<%end%>
</main><!-- /.container -->
