<%= form_with model: restaurant, local: true do |form| %>

     <div class="field">
        <%= form.text_field :name, class: 'form-control', :required => true, placeholder: 'Restaurant Name' %>
        <% if restaurant.errors.full_messages_for(:name).any?%>
            <div class="invalid-feedback">
                <% restaurant.errors.full_messages_for(:name).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>
    
    
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <div class="field">
                <%= form.text_field :address, class: 'form-control', :required => true, placeholder: 'Address' %>
                <% if restaurant.errors.full_messages_for(:address).any?%>
                    <div class="invalid-feedback">
                        <% restaurant.errors.full_messages_for(:address).each do |error_message|%>
                            <%= error_message %>.
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="field">
                <%= form.text_field :city, class: 'form-control', :required => true, placeholder: 'City' %>
                <% if restaurant.errors.full_messages_for(:city).any?%>
                    <div class="invalid-feedback">
                        <% restaurant.errors.full_messages_for(:city).each do |error_message|%>
                            <%= error_message %>.
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="field">
            <%= form.select(:state, options_for_select([['AK', 'AK'],
            ['AL', 'AL'],
            ['AR', 'AR'],
            ['AZ', 'AZ'],
            ['CA', 'CA'],
            ['CO', 'CO'],
            ['CT', 'CT'],
            ['DC', 'DC'],
            ['DE', 'DE'],
            ['FL', 'FL'],
            ['GA', 'GA'],
            ['HI', 'HI'],
            ['IA', 'IA'],
            ['ID', 'ID'],
            ['IL', 'IL'],
            ['IN', 'IN'],
            ['KS', 'KS'],
            ['KY', 'KY'],
            ['LA', 'LA'],
            ['MA', 'MA'],
            ['MD', 'MD'],
            ['ME', 'ME'],
            ['MI', 'MI'],
            ['MN', 'MN'],
            ['MO', 'MO'],
            ['MS', 'MS'],
            ['MT', 'MT'],
            ['NC', 'NC'],
            ['ND', 'ND'],
            ['NE', 'NE'],
            ['NH', 'NH'],
            ['NJ', 'NJ'],
            ['NM', 'NM'],
            ['NV', 'NV'],
            ['NY', 'NY'],
            ['OH', 'OH'],
            ['OK', 'OK'],
            ['OR', 'OR'],
            ['PA', 'PA'],
            ['RI', 'RI'],
            ['SC', 'SC'],
            ['SD', 'SD'],
            ['TN', 'TN'],
            ['TX', 'TX'],
            ['UT', 'UT'],
            ['VA', 'VA'],
            ['VT', 'VT'],
            ['WA', 'WA'],
            ['WI', 'WI'],
            ['WV', 'WV'],
            ['WY', 'WY']]), {:prompt => 'State'},{class: 'custom-select', :required => true})%>
            <% if restaurant.errors.full_messages_for(:state).any?%>
                <div class="invalid-feedback">
                    <% restaurant.errors.full_messages_for(:state).each do |error_message|%>
                        <%= error_message %>.
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
    
    <div class='form-row'>
        <div class="col-md-4 mb-3">
            <div class="field">
                <%= form.text_field :style, class: 'form-control', :required => true, placeholder: 'Type of Cuisine' %>
                <% if restaurant.errors.full_messages_for(:style).any?%>
                    <div class="invalid-feedback">
                        <% restaurant.errors.full_messages_for(:style).each do |error_message|%>
                            <%= error_message %>.
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    
    <div class="field">
        <%= form.text_area :additional, class: 'form-control', placeholder: 'Additional Information (Optional)'%>
        <% if restaurant.errors.full_messages_for(:additional).any?%>
            <div class="invalid-feedback">
                <% restaurant.errors.full_messages_for(:additional).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>
    


<%if user_signed_in? %>
    <% if current_user.admin == true %>
        <div class='form-row'>
            <div class="field">
                Approved? <%= form.select(:approved, options_for_select(["false","true"]), {selected: @restaurant.approved},{class: 'custom-select'}) %>
            </div>
        </div>
    <% end %>
<%end%>
    </div>

    <div class="actions">
        <%= form.submit 'Submit', class: 'btn btn-primary'%>
    </div>
<% end %>
