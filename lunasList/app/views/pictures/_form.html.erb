<%= form_with model: picture, local: true do |form| %>

    <div class="field">
        <%= form.label :avatar %>
        <%= form.file_field :avatar%>
    </div>

    <div class="field">
        <%= form.text_field :picName, class: 'form-control', placeholder: 'Name'%>
    </div>


    <div class="actions">
        <%= form.submit 'Submit', class: 'btn btn-primary'%>
    </div>
<% end %>
