<%= form_with model: vet, local: true do |form| %>

    <div class="field">
        <%= form.label :businessName%>
        <%= form.text_field :businessName, class: 'form-control' %>
        <% if vet.errors.full_messages_for(:businessName).any?%>
            <div class="invalid-feedback">
                <% vet.errors.full_messages_for(:businessName).each do |error_message|%>
