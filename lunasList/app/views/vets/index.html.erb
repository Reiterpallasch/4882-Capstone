<main role="main" class="container">


    <h1>Vets</h1>
<% if user_signed_in? && current_user.admin == true%>
    <table class="table table-sm">
    <thead>
        <tr>
        <th scope="col">Business</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">City</th>
        <th scope="col">State</th>
        <th scope="col">Phone</th>
        <th scope="col">Email</th>
	<th scope="col">Approved</th>
        <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        <% @vets.each do |vet| %>
        <tr>
        <td><%= vet.businessName %></td>
        <td><%= vet.name %></td>
        <td><%= vet.address %></td>
        <td><%= vet.city %></td>
        <td><%= vet.state %></td>
        <td><%= vet.phone %></td>
        <td><%= vet.email %></td>
	<%if vet.approved == true%>
            <td>Approved</td>
            <%else%>
            <td>Not Approved</td>
<%end%>
        
        <td>
 
            
            <%= link_to 'Edit', edit_vet_path(vet) %>
            <%= link_to 'Destroy', vet_path(vet), method: :delete %> 
            
        </td> 
        
        </tr>
        <% end %>
    </tbody>
    </table>

    <p>
        <%= link_to 'Create New Vet', new_vet_path%>
    </p>
	<%else%>
    <table class="table table-sm">
    <thead>
        <tr>
        <th scope="col">Business</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">City</th>
        <th scope="col">State</th>
        <th scope="col">Phone</th>
        <th scope="col">Email</th>
        <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        <% @vets.each do |vet| %>
        <tr>
	<%if vet.approved == true %>
        <td><%= vet.businessName %></td>
        <td><%= vet.name %></td>
        <td><%= vet.address %></td>
        <td><%= vet.city %></td>
        <td><%= vet.state %></td>
        <td><%= vet.phone %></td>
        <td><%= vet.email %></td>
	<%end%>
        
        </tr>
        <% end %>
    </tbody>
    </table>
	
 

    <p>
        <%= link_to 'Create New Vet', new_vet_path%>
    </p>
<%end%>
</main><!-- /.container -->
