<main role="main" class="container">


    <h1>parks</h1>
<% if user_signed_in? && current_user.admin == true%>
    <table class="table table-sm">
    <thead>
        <tr>

        <th scope="col">Name</th>
        <th scope="col">Address</th>
		<th scope="col">Size</th>

        <th scope="col">Leash</th>

	<th scope="col">Approved</th>
        <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        <% @parks.each do |park| %>
        <tr>

        <td><%= park.name %></td>
        <td><%= park.address %></td>
        <td><%= park.size %></td>
		<td><%= park.leash %></td>

	<%if park.approved == true%>
            <td>Approved</td>
            <%else%>
            <td>Not Approved</td>
<%end%>
        
        <td>
 
            
            <%= link_to 'Edit', edit_park_path(park) %>
            <%= link_to 'Destroy', park_path(park), method: :delete %> 
            
        </td> 
        
        </tr>
        <% end %>
    </tbody>
    </table>
	<%else%>
    <table class="table table-sm">
    <thead>
        <tr>

        <th scope="col">Name</th>
        <th scope="col">Address</th>

        <th scope="col">Size</th>
        <th scope="col">Leash</th>
        <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        <% @parks.each do |park| %>
        <tr>
	<%if park.approved == true %>

        <td><%= park.name %></td>
        <td><%= park.address %></td>
        <td><%= park.size %></td>
        <td><%= park.leash %></td>

	<%end%>
        
        </tr>
        <% end %>
    </tbody>
    </table>
	
 

    <p>
        <%= link_to 'Create New park', new_park_path%>
    </p>
<%end%>
</main><!-- /.container -->
