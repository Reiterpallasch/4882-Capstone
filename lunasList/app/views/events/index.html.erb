<main role="main" class="container">


    <h1>EVENTS</h1>

    <table class="table table-sm">
    <thead>
        <tr>
        <th scope="col">Description</th>
        <th scope="col">location</th>
        <th scope="col">Date and Time</th>
        <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        <% @events.each do |each| %>
        <tr>
        <td><%= each.description %></td>
        <td><%= each.location %></td>
        <td><%= each.time %></td>
        <td>
            <%= link_to 'Show', event_path(each) %> 
            <%= link_to 'Edit', edit_event_path(each) %>
            <%= link_to 'Destroy', event_path(each), method: :delete %> 
        </td>
        
        </tr>
        <% end %>
    </tbody>
    </table>
    
    <p>
        <%= link_to 'Create New Event', new_event_path%>
    </p>

</main><!-- /.container -->