<body>
<main>
  <section id="events" class="section-with-bg">
    <div class="container wow fadeInUp">
      <div class="section-header">
        <h2>Our Next Events</h2>
        <p>Welcome you to join us for our events</p>
      </div>
      <div class="content row justify-content-center">
        <!-- event list -->
        <% @events.each do |each| %>
          <div class="row event-item">
            <div class="col-md-2">
              <time><%= each.time.day %></time>
              <time><%= each.time.strftime("%b")%></time>
              <time><%= each.time.year %></time>
            </div>
            <div class="col-md-2"><%= each.time.strftime("%I:%M %P")%></div>
            <div class="col-md-8">
              <h4><%= each.description %></h4>
              <p><%= each.location %></p>
            </div>
          </div>
          <br></br>
          <% end %>

        <!-- End Schdule Day 1 -->
      </div>

    </div>
    <p>
        <%= link_to 'Create New Event', new_event_path%>
    </p>

  </section>
</main>
</body><!-- /.container -->
