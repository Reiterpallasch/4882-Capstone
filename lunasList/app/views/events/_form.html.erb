<%= form_with model: event, local: true do |form| %>

    <div class="field">
        <%= form.label :location%>
        <%= form.text_field :location, class: 'form-control' %>
        <% if event.errors.full_messages_for(:location).any?%>
            <div class="invalid-feedback">
                <% event.errors.full_messages_for(:location).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="field">
        <%= form.label :description%>
        <%= form.text_field :description, class: 'form-control' %>
        <% if event.errors.full_messages_for(:description).any?%>
            <div class="invalid-feedback">
                <% event.errors.full_messages_for(:description).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>
    
    <div class="form-row">
            <div class="col-md-4 mb-3">
                <div class="field">
                    <%= form.label :time, "Session starts at" %>
                    <br>
                    <%= form.datetime_select(:time, :start_year => 2019, :ampm => true, :default => 0.days.from_now.in_time_zone(@timezone))%>
                </div>
            </div>
        
    </div>

    <div class="actions">
        <%= form.submit 'Submit', class: 'btn btn-primary'%>
    </div>
<% end %>
