<%= form_with model: @topic, local: true do |f| %>

  <% if params[:forum] %><input type="hidden" id="topic_forum_id" name="topic[forum_id]" value="<%= params[:forum] %>" /><% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>

    <%= text_area(:post, :content, cols: 80, rows: 20)%>
  </p>
  <p><%= f.submit "Create" %></p>
<% end %>
