<%= form_with model: store, local: true do |form| %>


    <div class="field">
        <%= form.label :storeName, 'Store Name'%>
        <%= form.text_field :storeName, class: 'form-control' %>
        <% if store.errors.full_messages_for(:storeName).any?%>
            <div class="invalid-feedback">
                <% store.errors.full_messages_for(:storeName).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="field">
        <%= form.label :address%>
        <%= form.text_field :address, class: 'form-control' %>
        <% if store.errors.full_messages_for(:address).any?%>
            <div class="invalid-feedback">
                <% store.errors.full_messages_for(:address).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="field">
        <%= form.label :city%>
        <%= form.text_field :city, class: 'form-control' %>
        <% if store.errors.full_messages_for(:city).any?%>
            <div class="invalid-feedback">
                <% store.errors.full_messages_for(:city).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="field">
        <%= form.label :state%>
        <%= form.text_field :state, class: 'form-control' %>
        <% if store.errors.full_messages_for(:state).any?%>
            <div class="invalid-feedback">
                <% store.errors.full_messages_for(:state).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="field">
        <%= form.label :phone%>
        <%= form.text_field :phone, class: 'form-control' %>
        <% if store.errors.full_messages_for(:phone).any?%>
            <div class="invalid-feedback">
                <% store.errors.full_messages_for(:phone).each do |error_message|%>
                    <%= error_message %>.
                <% end %>
            </div>
        <% end %>
    </div>

<%if user_signed_in? %>
<% if current_user.admin == true %>
    <div class="field">
        <%= form.label :approved %>
        <%= form.select :approved, options_for_select(["false","true"], selected: @store.approved),class: 'form-control' %>
</div>

<% end %>
<%end%>
    </div>

    <div class="actions">
        <%= form.submit 'Submit', class: 'btn btn-primary'%>
    </div>
<% end %>
