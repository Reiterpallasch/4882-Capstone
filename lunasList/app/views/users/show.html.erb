
<div class="container">
    <div class="row align-items-center justify-content-between">
        <div class="col-lg-6 col-md-6 home-about-left">
            <img class="img-fluid" width="50%" height="225" src="https://cdn.pixabay.com/photo/2016/02/17/16/32/person-1205346_1280.png" alt="">
        </div>
        <div class="col-lg-5 col-md-6 home-about-right">
            <h6>My Profile</h6>
            <h1 class="text-uppercase">Personal Details</h1>
            <p>Email: <%=@user.email%></p>
            <a href="" class="primary-btn text-uppercase">Edit Profile</a>
        </div>
    </div>
</div>

<div class="row d-flex justify-content-center">
    <div class="menu-content  col-lg-7">
        <div class="title text-center">
            <h1 class="mb-10">My Cute Pets</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
    <% @user.pets.each do |a| %>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" width="100%" height="225" src="" />
                <div class="card-body">
                    <p class="card-text">Name: <%=a.name%></p>
                    <p class="card-text">Age: <%=a.age%></p>
                    <p class="card-text">Gender: <%=a.gender%></p>
                
                    <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                    </div>
                </div>  
            </div>
        </div>
    <%end%>
    </div>
</div>
 
 